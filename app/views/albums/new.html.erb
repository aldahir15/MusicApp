<% unless flash[:errors].nil? %>
  <% flash[:errors].each do |error| %>
    <ul>
      <%= error %>
    </ul>
    <% end %>
<% end %>

<form action="<%= albums_url %>" method="post">
  <input
  type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>">

  <label for="Band">Band: </label>
  <select name="album[band_id]">
    <% Band.all.each do |band| %>
      <option value="<%=band.id%>"><%=band.name%></option>
    <% end %>
  </select>
  <br>
  <label for="title">Name: </label>
  <input id="title" type="text" name="album[title]">
  <br>
  <label for="year">Year: </label>
  <input id="year" type="number" name="album[year]">
  <br>
  <input type="radio" name="album[recording_type]" value="Studio" checked> Studio<br>
  <input type="radio" name="album[recording_type]" value="Live"> Live<br>
  <br>
  <input type="submit" value="submit">
</form>
