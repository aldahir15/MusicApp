<% unless flash[:errors].nil? %>
  <% flash[:errors].each do |error| %>
    <ul>
      <%= error %>
    </ul>
    <% end %>
<% end %>

<form action="<%= tracks_url %>" method="post">
  <input
  type="hidden"
  name="authenticity_token"
  value="<%= form_authenticity_token %>">

  <label for="Album">Album: </label>
  <select name="track[album_id]">
    <% Album.all.each do |album| %>
      <option value="<%=album.id%>"><%=album.title%></option>
    <% end %>
  </select>
  <br>
  <label for="title">Title: </label>
  <input id="title" type="text" name="track[title]">
  <br>
  <label for="ord">Order: </label>
  <input id="ord" type="number" name="track[ord]">
  <br>
  <label for="lyrics">Lyrics: </label>
  <textarea id="lyrics" name="track[lyrics]"></textarea>
  <br>
  <input type="radio" name="track[reg_or_bonus]" value="Regular" checked> Regular<br>
  <input type="radio" name="track[reg_or_bonus]" value="Bonus"> Bonus<br>
  <input type="submit" value="submit">
</form>
