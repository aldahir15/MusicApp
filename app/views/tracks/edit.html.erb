<form action="<%= album_url %>" method="post">
  <input type="hidden" name="_method", value="PATCH">

  <label for="Album">Album: </label>
  <select name="track[album_id]">
    <% Album.all.each do |album| %>
      <option value="<%=album.id%>" <%= @track.album_id == album.id ? "selected" : "" %>><%=album.title%></option>
    <% end %>
  </select>
  <br>
  <label for="title">Title: </label>
  <input id="title" type="text" name="track[title]" value="<%= @track.title %>">
  <br>
  <label for="ord">Order: </label>
  <input id="ord" type="number" name="track[ord]" value="<%= @track.ord %>">
  <br>
  <label for="lyrics">Lyrics: </label>
  <textarea id="lyrics" name="track[lyrics]"><%= @track.lyrics %></textarea>
  <br>
  <input type="radio" name="track[reg_or_bonus]" value="Regular" <%= @track.reg_or_bonus == "Regular" ? "checked" : "" %> > Regular<br>
  <input type="radio" name="track[reg_or_bonus]" value="Bonus" <%= @track.reg_or_bonus == "Bonus" ? "checked" : "" %> > Bonus<br>
  <input type="submit" value="submit">


</form>
